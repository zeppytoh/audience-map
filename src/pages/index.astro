---
import GeographicalMap from "../components/GeographicalMap.astro";
import Header from "../components/Header.astro";
import StageCard from "../components/StageCard.astro";
import MainLayout from "../layouts/MainLayout.astro";

// Stage data with English and Japanese names
const stages = [
  { id: "open", name: "Open", japaneseName: "オープン", color: "open" },
  { id: "seeking", name: "Seeking", japaneseName: "探求中", color: "seeking" },
  { id: "growing", name: "Growing", japaneseName: "成長中", color: "growing" },
  {
    id: "grounded",
    name: "Grounded",
    japaneseName: "根付いた",
    color: "grounded",
  },
  {
    id: "engaged",
    name: "Engaged",
    japaneseName: "関わり合う",
    color: "engaged",
  },
  {
    id: "multiplying",
    name: "Multiplying",
    japaneseName: "倍加する",
    color: "multiplying",
  },
  {
    id: "professing",
    name: "Professing",
    japaneseName: "告白する",
    color: "professing",
  },
  { id: "unaware", name: "Unaware", japaneseName: "無自覚", color: "unaware" },
  { id: "hostile", name: "Hostile", japaneseName: "敵対的", color: "hostile" },
  {
    id: "uninterested",
    name: "Uninterested",
    japaneseName: "無関心",
    color: "uninterested",
  },
  { id: "dual", name: "Dual", japaneseName: "二重", color: "dual" },
  { id: "unclear", name: "Unclear", japaneseName: "不明確", color: "unclear" },
];
---

<MainLayout title="伝えたい相手の🗾">
  <Header />

  <div class="mb-8">
    <div class="bg-white p-0.5 md:p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold mb-4">
        オーディエンス・マップへようこそ：
      </h2>
      <p class="text-gray-700 mb-4">
        この図では、12の異なるステージについて詳しく説明しています。
      </p>
      <div class="overflow-hidden">
        <!-- <img
          src="/images/map.png"
          alt="12ステージマップ"
          class="w-full h-auto object-cover"
        /> -->
        <!-- <Image src={geographicalMap} alt="Geographical Map" width={1200} /> -->
        <GeographicalMap />
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      stages.map((stage) => (
        <StageCard
          id={stage.id}
          name={stage.name}
          japaneseName={stage.japaneseName}
          color={stage.color}
        />
      ))
    }
  </div>
</MainLayout>
