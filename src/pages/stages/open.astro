---
import Header from "../../components/Header.astro";
import MainLayout from "../../layouts/MainLayout.astro";

// This would be replaced with actual content once you provide it
const stageContent = {
  id: "open",
  name: "Open",
  japaneseName: "オープン",
  description: "オープンステージについての詳細な説明がここに入ります。",
  characteristics: [
    "特徴1についての説明",
    "特徴2についての説明",
    "特徴3についての説明",
  ],
  examples: ["例1についての説明", "例2についての説明"],
};
---

<MainLayout title={`${stageContent.japaneseName} | 12ステージマップ`}>
  <Header />

  <div class="mb-4">
    <a href="/" class="text-blue-600 hover:text-blue-800 flex items-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 mr-1"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
          clip-rule="evenodd"></path>
      </svg>
      マップに戻る
    </a>
  </div>

  <div class="bg-white rounded-lg shadow-md p-8">
    <div class="mb-6">
      <h2 class="text-3xl font-bold text-gray-800">
        {stageContent.japaneseName}
      </h2>
      <p class="text-gray-600">{stageContent.name}</p>
    </div>

    <div class="prose max-w-none">
      <p>{stageContent.description}</p>

      <h3 class="text-xl font-semibold mt-6 mb-3">特徴</h3>
      <ul class="list-disc pl-5 space-y-2">
        {stageContent.characteristics.map((item) => <li>{item}</li>)}
      </ul>

      <h3 class="text-xl font-semibold mt-6 mb-3">例</h3>
      <ul class="list-disc pl-5 space-y-2">
        {stageContent.examples.map((item) => <li>{item}</li>)}
      </ul>
    </div>
  </div>
</MainLayout>
